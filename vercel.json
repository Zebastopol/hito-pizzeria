{
  "version": 2,
  "builds": [
    {
      "src": "pizzeria-mamma-mia/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "pizza-backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "pizza-backend/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
