{
  "version": 2,
  "builds": [
    {
      "src": "pizzeria-mamma-mia/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "pizza-backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "pizza-backend/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "pizzeria-mamma-mia/index.html"
    }
  ]
}
